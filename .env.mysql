# ==================================================
# SECUREHOME AUDIT PLATFORM - MYSQL CONFIGURATION
# ==================================================

# Application Configuration
NODE_ENV=development
PORT=5000

# ==================================================
# MYSQL DATABASE CONFIGURATION
# ==================================================
DATABASE_URL=mysql://username:password@localhost:3306/securehome_audit_db

# Alternative MySQL Configuration (individual fields)
DB_HOST=localhost
DB_USER=securehome_user
DB_PASSWORD=your_mysql_password
DB_NAME=securehome_audit_db
DB_PORT=3306

# ==================================================
# MySQL Database Providers (Choose one)
# ==================================================

# PlanetScale (Serverless MySQL)
# DATABASE_URL=mysql://username:password@aws.connect.psdb.cloud/database-name?ssl={"rejectUnauthorized":true}

# Railway MySQL
# DATABASE_URL=mysql://root:password@containers-us-west-xxx.railway.app:6543/railway

# DigitalOcean MySQL
# DATABASE_URL=mysql://username:password@db-mysql-nyc3-xxx.db.ondigitalocean.com:25060/defaultdb?ssl-mode=REQUIRED

# AWS RDS MySQL
# DATABASE_URL=mysql://username:password@database-xxx.cluster-xxx.us-east-1.rds.amazonaws.com:3306/database_name

# Google Cloud SQL MySQL
# DATABASE_URL=mysql://username:password@xxx.xxx.xxx.xxx:3306/database_name

# ==================================================
# SESSION & AUTHENTICATION
# ==================================================
SESSION_SECRET=your-super-secret-session-key-must-be-at-least-32-characters-long-for-security

# ==================================================
# SQUARE PAYMENT GATEWAY CONFIGURATION
# ==================================================
SQUARE_APPLICATION_ID=sandbox-sq0idb-your-application-id
SQUARE_ACCESS_TOKEN=EAAAEOrdinary sandbox access token here
SQUARE_LOCATION_ID=your-location-id-from-square-dashboard  
SQUARE_ENVIRONMENT=sandbox

# ==================================================
# DOCUSIGN DIGITAL SIGNATURE INTEGRATION
# ==================================================
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key-from-developer-account
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour private key content here\n-----END RSA PRIVATE KEY-----
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi
DOCUSIGN_ACCESS_TOKEN=your-docusign-jwt-access-token

# ==================================================
# EMAIL SERVICE CONFIGURATION
# ==================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# ==================================================
# MYSQL-SPECIFIC SETTINGS
# ==================================================
MYSQL_SSL_MODE=REQUIRED
MYSQL_TIMEZONE=+00:00
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# ==================================================
# CONNECTION POOL SETTINGS
# ==================================================
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0
DB_TIMEOUT=60000
DB_ACQUIRE_TIMEOUT=60000

# ==================================================
# SECURITY SETTINGS
# ==================================================
CORS_ORIGIN=http://localhost:5000
TRUST_PROXY=true