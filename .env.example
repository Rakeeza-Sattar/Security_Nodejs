# ==================================================
# SECUREHOME AUDIT PLATFORM - ENVIRONMENT VARIABLES
# ==================================================

# Application Configuration
NODE_ENV=development
PORT=5000

# ==================================================
# DATABASE CONFIGURATION (PostgreSQL)
# ==================================================
DATABASE_URL=postgresql://username:password@localhost:5432/securehome_audit_db
PGHOST=localhost
PGPORT=5432
PGUSER=securehome_user
PGPASSWORD=your_database_password
PGDATABASE=securehome_audit_db

# ==================================================
# SESSION & AUTHENTICATION
# ==================================================
SESSION_SECRET=your-super-secret-session-key-must-be-at-least-32-characters-long-for-security

# ==================================================
# SQUARE PAYMENT GATEWAY CONFIGURATION
# ==================================================
SQUARE_APPLICATION_ID=sandbox-sq0idb-your-application-id
SQUARE_ACCESS_TOKEN=EAAAEOrdinary sandbox access token here
SQUARE_LOCATION_ID=your-location-id-from-square-dashboard  
SQUARE_ENVIRONMENT=sandbox
# For Production: change SQUARE_ENVIRONMENT=production
# For Production: use production tokens and application ID

# ==================================================
# DOCUSIGN DIGITAL SIGNATURE INTEGRATION
# ==================================================
DOCUSIGN_INTEGRATION_KEY=your-docusign-integration-key-from-developer-account
DOCUSIGN_ACCOUNT_ID=your-docusign-account-id
DOCUSIGN_USER_ID=your-docusign-user-id
DOCUSIGN_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour private key content here\n-----END RSA PRIVATE KEY-----
DOCUSIGN_BASE_URL=https://demo.docusign.net/restapi
DOCUSIGN_ACCESS_TOKEN=your-docusign-jwt-access-token

# For Production DocuSign:
# DOCUSIGN_BASE_URL=https://www.docusign.net/restapi

# ==================================================
# EMAIL SERVICE CONFIGURATION (Optional)
# ==================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=SecureHome Audit <noreply@securehome.com>

# ==================================================
# FILE STORAGE CONFIGURATION (Optional)
# ==================================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ==================================================
# SECURITY HEADERS & CORS
# ==================================================
CORS_ORIGIN=http://localhost:5000
TRUST_PROXY=true

# ==================================================
# LOGGING & MONITORING
# ==================================================
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ==================================================
# FEATURE FLAGS
# ==================================================
ENABLE_TITLE_MONITORING=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_DOCUSIGN_INTEGRATION=true

# ==================================================
# EXTERNAL SERVICES (Optional)
# ==================================================
# SMS Service (Twilio)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token  
# TWILIO_PHONE_NUMBER=your-twilio-phone-number

# AWS S3 (for file storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=securehome-files

# ==================================================
# BACKUP & MAINTENANCE
# ==================================================
BACKUP_SCHEDULE=0 2 * * *
MAINTENANCE_MODE=false

# ==================================================
# DEVELOPMENT ONLY
# ==================================================
DEBUG=false
MOCK_PAYMENTS=false
MOCK_DOCUSIGN=false